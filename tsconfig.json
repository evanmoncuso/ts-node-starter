{
  "compilerOptions": {
    "lib": [
      "es2015"
    ],
    "moduleResolution": "node",
    "allowJs": true,
    "module": "commonjs",
    "outDir": "./lib",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020"
  },
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*"
  ]
}